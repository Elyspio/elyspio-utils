{
	"compilerOptions": {
		"lib": [
			"es2021",
			"esNext"
		],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2021",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"outDir": "out-js",
		"declaration": true
	},
	"include": [
		"./src",
		"./scripts"
	]
}
